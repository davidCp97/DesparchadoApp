<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    tools:context=".MainActivity">



    <ImageView
        android:id="@+id/icon"
        android:layout_width="79dp"
        android:layout_height="76dp"
        android:padding="5dp" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_weight="0.48">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:weightSum="1"
            android:id="@+id/linearLayout">

        </LinearLayout>

        <TextView
            android:id="@+id/texto_secundario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="16dp"
            android:layout_weight="0.55"
            android:text="variable"
            android:textAlignment="center"
            android:layout_alignRight="@+id/texto_principal"
            android:layout_alignEnd="@+id/texto_principal" />

        <TextView
            android:id="@+id/texto_Ternario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.55"
            android:text="descripcion"
            android:textAlignment="center"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/texto_secundario"
            android:layout_alignEnd="@+id/texto_secundario" />


        <TextView
            android:id="@+id/texto_principal"
            android:layout_width="303dp"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:text="Monaliza"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#489e37"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/texto_secundario" />
    </RelativeLayout>

</LinearLayout>